# Example environment configuration for .NET Core DMV Scraper
# Copy this file to .env and customize the values

# ======================
# SCRAPER CONFIGURATION
# ======================

# Appointment type to search for
ScraperSettings__AppointmentType=Driver License - First Time
# Other options:
# ScraperSettings__AppointmentType=Motorcycle Skills Test
# ScraperSettings__AppointmentType=Legal Presence
# ScraperSettings__AppointmentType=Permits
# ScraperSettings__AppointmentType=Teen Driver Level 1
# ScraperSettings__AppointmentType=ID Card

# How often to check for appointments (in minutes)
ScraperSettings__BaseIntervalMinutes=10

# Random delay range between checks (in seconds)
ScraperSettings__MinRandomDelaySeconds=10
ScraperSettings__MaxRandomDelaySeconds=30

# Send notification even when no appointments found
ScraperSettings__ProofOfLife=false

# =========================
# NOTIFICATION CONFIGURATION
# =========================

# Notification platform: discord or slack
NotificationSettings__Type=discord

# Discord webhook URL (get from Discord server settings)
NotificationSettings__DiscordWebhookUrl=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL_HERE

# Slack webhook URL (get from Slack app settings)
NotificationSettings__SlackWebhookUrl=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK_URL_HERE

# Custom intro message (optional)
# NotificationSettings__IntroMessage=ðŸš— DMV Appointments Found! 

# =======================
# LOCATION FILTERING
# =======================

# Your address for distance-based filtering
FilterSettings__UserAddress=1226 Testing Avenue, Charlotte, NC

# Maximum distance in miles from your address
FilterSettings__DistanceRangeMiles=25

# =======================
# DATE/TIME FILTERING
# =======================

# Option 1: Relative date range (easier)
# Examples: 1w (1 week), 2w (2 weeks), 1m (1 month), 30d (30 days)
FilterSettings__DateRangeRelative=2w

# Option 2: Absolute date range (comment out DateRangeRelative to use)
# FilterSettings__DateRangeStart=01/23/2025
# FilterSettings__DateRangeEnd=09/23/2025

# Time range filtering (24-hour format)
FilterSettings__TimeRangeStart=09:00
FilterSettings__TimeRangeEnd=17:00

# =======================
# LOGGING CONFIGURATION
# =======================

# Log level: Trace, Debug, Information, Warning, Error, Critical
Logging__LogLevel__Default=Information

# Enable debug logging for scraper services
# Logging__LogLevel__NCDmvScraper.Services=Debug